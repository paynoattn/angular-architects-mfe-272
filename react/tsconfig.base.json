{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mp-frontend-react/hooks": ["libs/hooks/src/index.ts"],
      "@mp-frontend-react/testing": ["libs/testing/src/index.ts"],
      "@mp-frontend-react/types": ["libs/types/src/index.ts"],
      "@mp-frontend-react/web-mp-theme": ["libs/web-mp-theme/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
